{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@legacy/*": ["./src/old-structure/*"],
      "@features/*": ["./src/features/*"]
    },
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
